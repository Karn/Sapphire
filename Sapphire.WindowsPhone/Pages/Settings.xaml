<Page x:Class="Sapphire.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Sapphire.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{StaticResource DarkPrimaryColor}"
      mc:Ignorable="d">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid Height="55" Background="{ThemeResource PrimaryColor}">
			<TextBlock x:Name="PageTitle"
			           Foreground="{StaticResource PrimaryText}"
			           Style="{StaticResource Headline}"
			           Text="Settings" />
		</Grid>

		<ScrollViewer Grid.Row="1"
		              Background="White"
		              Padding="10, 0">
			<StackPanel>
				<TextBlock FontWeight="Normal"
				           Foreground="{StaticResource PrimaryText}"
				           Style="{StaticResource SubTitle}"
				           Text="General" />
				<StackPanel Tapped="AccountManage_Tapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Accounts" />
						<LineBreak />
						<Run Text="Manage your accounts." />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel Tapped="RateReviewTapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Like this app?" />
						<LineBreak />
						<Run Text="Take a moment to rate/review the app." />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel x:Name="UpgardePanel" Tapped="UpgradeAppTapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Upgrade to full version" />
						<LineBreak />
						<Run Text="Add features with a one time purchase." />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel Tapped="AboutTapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="About Sapphire" />
						<LineBreak />
						<Run Text="Legal, privacy, and support." />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>

				<TextBlock Margin="0, 10, 0, 0"
				           FontWeight="Normal"
				           Foreground="{StaticResource PrimaryText}"
				           Style="{StaticResource SubTitle}"
				           Text="Preferences" />
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Blog notifications" />
						<LineBreak />
						<Run Text="Customize your blog specific alerts." />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Auto tags" />
						<LineBreak />
						<Run Text="Edit what tags to add to posts by default." />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>

				<TextBlock Margin="0, 10, 0, 0"
				           FontWeight="Normal"
				           Foreground="{StaticResource PrimaryText}"
				           Style="{StaticResource SubTitle}"
				           Text="Toggles" />
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Notifications" />
						<LineBreak />
						<Run Text="Manage blog alerts." />
					</TextBlock>
					<CheckBox x:Name="NotificationsToggle"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="EnableNotifications_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="UX feedback" />
						<LineBreak />
						<Run Text="Assist in development via usage analytics." />
					</TextBlock>
					<CheckBox x:Name="UXFeedback"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="AnalyticsSwitch_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
				<!--
					<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
					<Run FontWeight="Normal" Text="Dark theme" />
					<LineBreak />
					<Run Text="Enable a darker application skin." />
					</TextBlock>
					<CheckBox x:Name="DarkTheme"
					MinWidth="35"
					Margin="0, -50, -5, 0"
					HorizontalAlignment="Right"
					Background="#11FFFFFF"
					BorderBrush="#4a9bca"
					Click="SwitchTheme_Toggled"
					RequestedTheme="Light" />
					</StackPanel>
				-->
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Statusbar background" />
						<LineBreak />
						<Run Text="Enable a darker status bar background" />
					</TextBlock>
					<CheckBox x:Name="DarkStatusbar"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="StatusBarBGToggle_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Quick-reblog" />
						<LineBreak />
						<Run Text="Skip addition of more details to a post." />
					</TextBlock>
					<CheckBox x:Name="OneClickReblog"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="EnableOneClickReblog_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="Post tags" />
						<LineBreak />
						<Run Text="Display post tags below the captions." />
					</TextBlock>
					<CheckBox x:Name="PostTags"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="DisableTagsInPosts_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
			</StackPanel>

		</ScrollViewer>
	</Grid>
</Page>