<Page x:Class="Sapphire.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Sapphire.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{StaticResource DarkPrimaryColor}"
      mc:Ignorable="d">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid Height="55" Background="{ThemeResource PrimaryColor}">
			<TextBlock x:Name="PageTitle"
			           Foreground="{StaticResource PrimaryText}"
			           Style="{StaticResource Headline}"
			           Text="{Binding [Title_Settings],
			                          Source={StaticResource Localized}}" />
		</Grid>

		<ScrollViewer Grid.Row="1"
		              Background="White"
		              Padding="10, 0">
			<StackPanel>
				<TextBlock FontWeight="Normal"
				           Foreground="{StaticResource PrimaryText}"
				           Style="{StaticResource SubTitle}"
				           Text="{Binding [Heading_General],
				                          Source={StaticResource Localized}}" />
				<StackPanel Tapped="AccountManage_Tapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_AccountTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_AccountDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel Tapped="RateReviewTapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_ReviewTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_ReviewDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel x:Name="UpgardePanel" Tapped="UpgradeAppTapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_UpgradeTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_UpgradeDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel Tapped="AboutTapped">
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_AboutTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_AboutDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>

				<TextBlock Margin="0, 10, 0, 0"
				           FontWeight="Normal"
				           Foreground="{StaticResource PrimaryText}"
				           Style="{StaticResource SubTitle}"
				           Text="{Binding [Heading_Preferences],
				                          Source={StaticResource Localized}}" />
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_BlogNotifTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_BlogNotifDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_PostActionTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_PostActionDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_AutoTagsTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_AutoTagsDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<Image Width="35"
					       Height="35"
					       Margin="0, -40, 0, 0"
					       HorizontalAlignment="Right"
					       Source="ms-appx:///Assets/open_nav.png" />
				</StackPanel>

				<TextBlock Margin="0, 10, 0, 0"
				           FontWeight="Normal"
				           Foreground="{StaticResource PrimaryText}"
				           Style="{StaticResource SubTitle}"
				           Text="{Binding [Heading_Toggles],
				                          Source={StaticResource Localized}}" />
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_UXFeedbackTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_UXFeedbackDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<CheckBox x:Name="UXFeedback"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="AnalyticsSwitch_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
				<!--
					<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
					<Run FontWeight="Normal" Text="Dark theme" />
					<LineBreak />
					<Run Text="Enable a darker application skin." />
					</TextBlock>
					<CheckBox x:Name="DarkTheme"
					MinWidth="35"
					Margin="0, -50, -5, 0"
					HorizontalAlignment="Right"
					Background="#11FFFFFF"
					BorderBrush="#4a9bca"
					Click="SwitchTheme_Toggled"
					RequestedTheme="Light" />
					</StackPanel>
				-->
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_QuickPostTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_QuickPostDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<CheckBox x:Name="OneClickReblog"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="EnableOneClickReblog_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
				<StackPanel>
					<TextBlock Padding="5, 5, 5, 0" Style="{StaticResource Body}">
						<Run FontWeight="Normal" Text="{Binding [Settings_PostTagsTitle], Source={StaticResource Localized}}" />
						<LineBreak />
						<Run Text="{Binding [Settings_PostTagsDescription], Source={StaticResource Localized}}" />
					</TextBlock>
					<CheckBox x:Name="PostTags"
					          MinWidth="35"
					          Margin="0, -50, -5, 0"
					          HorizontalAlignment="Right"
					          Background="#11FFFFFF"
					          BorderBrush="#4a9bca"
					          Click="DisableTagsInPosts_Toggled"
					          RequestedTheme="Light" />
				</StackPanel>
			</StackPanel>

		</ScrollViewer>
	</Grid>
</Page>