<UserControl x:Class="Core.Utils.Controls.PostFeedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
             xmlns:converters="using:Core.Utils.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Core.Utils.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:misc="using:Core.Shared.Utils.Misc"
             xmlns:miscl="using:Core.Utils.Misc"
             d:DesignHeight="300"
             d:DesignWidth="380"
             mc:Ignorable="d">

	<UserControl.Resources>
		<Flyout x:Key="SaveToPhoneFlyout"
		        x:Name="OptionsPopup"
		        Placement="Full">
			<Flyout.FlyoutPresenterStyle>
				<Style TargetType="FlyoutPresenter">
					<Setter Property="Margin" Value="0" />
					<Setter Property="Background" Value="Transparent" />
				</Style>
			</Flyout.FlyoutPresenterStyle>
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid Background="#02000000" Tapped="Grid_Tapped" />
				<Grid Grid.Row="1"
				      VerticalAlignment="Bottom"
				      Background="{ThemeResource ColorPrimary}">
					<TextBlock Margin="20, 25, 20, 12"
					           HorizontalAlignment="Left"
					           VerticalAlignment="Top"
					           FontSize="24"
					           Foreground="{ThemeResource TextColorPrimary}"
					           Style="{StaticResource HeaderTextStyle}"
					           Tag="{Binding path_to_low_res_pic.url}"
					           Tapped="OtherOptions_Tapped"
					           Text="save to phone"
					           TextLineBounds="Tight"
					           TextTrimming="CharacterEllipsis" />
				</Grid>
			</Grid>
		</Flyout>

		<DataTemplate x:Key="NotesContainer">
			<StackPanel Margin="0, 4, 0, 0">
				<TextBlock Margin="7, 10"
				           FontSize="26"
				           Foreground="{ThemeResource TextColorPrimaryDark}"
				           Style="{StaticResource HeaderTextStyle}"
				           Text="Notes"
				           TextWrapping="Wrap" />
				<ListView ItemsSource="{Binding notes}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<StackPanel HorizontalAlignment="Stretch"
							            Orientation="Horizontal"
							            Tag="{Binding Name}"
							            Tapped="GoToBlog">
								<Image Width="45"
								       Height="45"
								       Margin="5"
								       Source="{Binding Avatar,
								                        FallbackValue={StaticResource DefaultAvatar}}" />
								<TextBlock MaxWidth="235"
								           Margin="10"
								           FontSize="15"
								           Foreground="{ThemeResource TextColorPrimaryDark}"
								           TextTrimming="CharacterEllipsis"
								           TextWrapping="Wrap">
									<Run Text="{Binding Name}" />
									<Run FontWeight="Light" Text="{Binding type}" />
								</TextBlock>
							</StackPanel>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Text">
			<StackPanel Background="{ThemeResource PostBG}">
				<TextBlock FontSize="20"
				           FontWeight="SemiBold"
				           Padding="8"
				           Style="{StaticResource StandardText}"
				           TextWrapping="WrapWholeWords"
				           Visibility="{Binding title,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:TextFormatter.Text="{Binding title}" />
				<TextBlock Margin="10, 5, 10, 10"
				           FontSize="20"
				           FontWeight="Light"
				           Foreground="{StaticResource TextColorPrimaryDark}"
				           LineHeight="18"
				           TextWrapping="Wrap"
				           Visibility="{Binding body,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:TextFormatter.Text="{Binding body}" />
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Photo">
			<Image FlyoutBase.AttachedFlyout="{StaticResource SaveToPhoneFlyout}"
			       Holding="Image_Holding"
			       Source="{Binding path_to_low_res_pic.url}" />
		</DataTemplate>

		<DataTemplate x:Key="Gif">
			<Grid>
				<MediaElement x:Name="Player"
				              AutoPlay="True"
				              IsDoubleTapEnabled="False"
				              IsHoldingEnabled="False"
				              IsLooping="True"
				              IsRightTapEnabled="False"
				              IsTapEnabled="False"
				              PosterSource="{Binding path_to_low_res_pic.url}"
				              Stretch="UniformToFill"
				              Tag="{Binding path_to_low_res_pic.url}" />
				<AppBarButton x:Name="PlayButton"
				              HorizontalAlignment="Right"
				              VerticalAlignment="Top"
				              Background="#CC252525"
				              BorderBrush="White"
				              Click="AppBarButton_Click"
				              Foreground="White"
				              Icon="Play"
				              IsCompact="True"
				              LostFocus="PlayButton_LostFocus"
				              RequestedTheme="Dark"
				              Tag="stopped" />
			</Grid>
		</DataTemplate>

		<DataTemplate x:Key="Photoset">
			<!--
				<ListView ItemsSource="{Binding photos}">
				<ListView.ItemTemplate>
				<DataTemplate>
				<Image Margin="0, 0, 0, 2"
				HorizontalAlignment="Stretch"
				FlyoutBase.AttachedFlyout="{StaticResource SaveToPhoneFlyout}"
				Holding="Image_Holding"
				Source="{Binding original_size.url}"
				Stretch="UniformToFill" />
				</DataTemplate>
				</ListView.ItemTemplate>
				</ListView>
			-->
			<miscl:VariableGridView x:Name="itemGridView"
			                        HorizontalContentAlignment="Stretch"
			                        ItemsSource="{Binding photos}">


				<GridView.ItemsPanel>
					<ItemsPanelTemplate>
						<VariableSizedWrapGrid Loaded="VariableSizedWrapGrid_Loaded" Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</GridView.ItemsPanel>


				<GridView.ItemTemplate>
					<DataTemplate>
						<Grid Background="Azure">
							<Image HorizontalAlignment="Stretch"
							       FlyoutBase.AttachedFlyout="{StaticResource SaveToPhoneFlyout}"
							       Holding="Image_Holding"
							       Source="{Binding original_size.url}"
							       Stretch="UniformToFill" />
						</Grid>


					</DataTemplate>
				</GridView.ItemTemplate>
			</miscl:VariableGridView>

		</DataTemplate>

		<DataTemplate x:Key="Quote">
			<Grid Background="{ThemeResource PostBG}">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<TextBlock Margin="0, -20"
				           FontSize="100"
				           FontWeight="SemiBold"
				           Foreground="#FF529ECC"
				           Opacity="0.3"
				           Padding="0"
				           RenderTransformOrigin="0.5,0.5"
				           Style="{StaticResource StandardText}"
				           Text="''"
				           TextWrapping="WrapWholeWords" />
				<TextBlock Margin="0, 20"
				           FontSize="20"
				           FontWeight="SemiBold"
				           Padding="8"
				           Style="{StaticResource StandardText}"
				           TextWrapping="WrapWholeWords"
				           Visibility="{Binding text,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:TextFormatter.Text="{Binding text}" />
				<TextBlock Margin="0"
				           HorizontalAlignment="Right"
				           VerticalAlignment="Bottom"
				           FontSize="100"
				           FontWeight="SemiBold"
				           Foreground="#FF529ECC"
				           Opacity="0.3"
				           Padding="0"
				           Style="{StaticResource StandardText}"
				           Text="''"
				           TextWrapping="WrapWholeWords" />
				<TextBlock Grid.Row="1"
				           Margin="10, 5, 10, 10"
				           FontSize="20"
				           FontWeight="Light"
				           Foreground="{StaticResource TextColorPrimaryDark}"
				           LineHeight="18"
				           TextWrapping="Wrap"
				           Visibility="{Binding source,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:TextFormatter.Text="{Binding source}" />
			</Grid>
		</DataTemplate>

		<DataTemplate x:Key="Link">
			<StackPanel Background="{ThemeResource PostBG}">
				<HyperlinkButton HorizontalAlignment="Stretch"
				                 Background="{ThemeResource ColorPrimary}"
				                 NavigateUri="{Binding url}"
				                 Padding="16">
					<StackPanel>
						<TextBlock Grid.Row="0"
						           Margin="10, 0, 10, 0"
						           FontSize="16"
						           Foreground="{ThemeResource TextColorPrimary}"
						           TextAlignment="Center"
						           TextWrapping="WrapWholeWords"
						           Visibility="{Binding title,
						                                Converter={StaticResource CaptionConverter}}"
						           misc:CaptionFormatter.Text="{Binding title}" />
						<TextBlock Grid.Row="1"
						           Margin="10, 0, 10, 0"
						           FontSize="16"
						           Foreground="{ThemeResource TextColorPrimary}"
						           Opacity="0.75"
						           TextAlignment="Center"
						           TextWrapping="WrapWholeWords"
						           Visibility="{Binding title,
						                                Converter={StaticResource CaptionConverter}}"
						           misc:CaptionFormatter.Text="{Binding url}" />
					</StackPanel>
				</HyperlinkButton>
				<TextBlock Margin="10, 5, 10, 0"
				           FontSize="16"
				           FontWeight="Light"
				           Foreground="{ThemeResource TextColorPrimaryDark}"
				           TextWrapping="WrapWholeWords"
				           Visibility="{Binding description,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:CaptionFormatter.Text="{Binding description}" />
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Chat">
			<StackPanel Background="{ThemeResource PostBG}">
				<TextBlock Margin="10, 0, 10, 0"
				           FontSize="22"
				           FontWeight="Light"
				           Foreground="{ThemeResource TextColorPrimaryDark}"
				           TextWrapping="WrapWholeWords"
				           Visibility="{Binding body,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:CaptionFormatter.Text="{Binding body}" />
				<TextBlock Margin="10, 5, 10, 10"
				           FontSize="18"
				           FontWeight="Light"
				           Foreground="{ThemeResource TextColorPrimaryDark}"
				           TextWrapping="WrapWholeWords"
				           Visibility="{Binding description,
				                                Converter={StaticResource CaptionConverter}}"
				           misc:CaptionFormatter.Text="{Binding description}" />
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Audio">
			<StackPanel Background="{ThemeResource PostBG}"
			            Orientation="Horizontal"
			            Tag="{Binding audio_url}">
				<Image Width="100"
				       Height="100"
				       Source="{Binding album_art}" />
				<StackPanel>
					<TextBlock x:Name="Name"
					           Margin="15, 0, 0, 0"
					           HorizontalAlignment="Left"
					           VerticalAlignment="Center"
					           FontSize="24"
					           Foreground="{ThemeResource TextColorPrimaryDark}"
					           Style="{StaticResource HeaderTextStyle}">
						<Run Text="{Binding artist}" />
						<Run Text="-" />
						<Run Text="{Binding track_name, FallbackValue=Track_Name}" />
					</TextBlock>
					<StackPanel Orientation="Horizontal">
						<AppBarButton x:Name="PlayButton"
						              Margin="10"
						              VerticalAlignment="Center"
						              Icon="Play"
						              IsCompact="True"
						              IsEnabled="False"
						              RequestedTheme="Light" />
						<AppBarButton x:Name="StopButton"
						              Margin="10"
						              VerticalAlignment="Center"
						              Icon="Stop"
						              IsCompact="True"
						              IsEnabled="False"
						              RequestedTheme="Light" />
					</StackPanel>
				</StackPanel>
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Video">
			<MediaElement MinHeight="100"
			              AreTransportControlsEnabled="True"
			              AutoPlay="False"
			              IsDoubleTapEnabled="False"
			              IsHoldingEnabled="False"
			              IsRightTapEnabled="False"
			              IsTapEnabled="False"
			              PosterSource="{Binding thumbnail_url}"
			              Source="{Binding video_url}"
			              Stretch="UniformToFill" />
		</DataTemplate>

		<DataTemplate x:Key="YoutubeVideo">
			<StackPanel Background="{StaticResource PostBG}">
				<TextBlock Margin="10, 0, 10, 0"
				           FontSize="22"
				           FontWeight="Light"
				           Foreground="{ThemeResource TextColorPrimaryDark}"
				           Text="This is a youtube video please use the post menu to open in browser."
				           TextWrapping="WrapWholeWords" />
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Answer">
			<StackPanel Background="{StaticResource PostBG}">
				<Grid>
					<Button MinWidth="0"
					        MinHeight="0"
					        Margin="0"
					        HorizontalAlignment="Left"
					        VerticalAlignment="Top"
					        BorderThickness="0"
					        Padding="0"
					        Style="{StaticResource ButtonStyleNoBG}"
					        UseLayoutRounding="True">
						<Image Width="50"
						       Height="50"
						       Source="{Binding asking_avatar,
						                        FallbackValue={StaticResource DefaultAvatar}}"
						       Stretch="UniformToFill" />
					</Button>
					<StackPanel Margin="55, 3, 5, 5" Background="#33DCDCDC">
						<TextBlock Margin="10, 2"
						           FontSize="22"
						           FontWeight="Light"
						           Foreground="{ThemeResource TextColorPrimaryDark}"
						           Text="{Binding asking_name,
						                          FallbackValue=Name}"
						           TextLineBounds="Tight"
						           TextWrapping="NoWrap" />
						<TextBlock Margin="10, 0, 10, 2"
						           FontSize="18"
						           FontWeight="Light"
						           Foreground="{ThemeResource TextColorPrimaryDark}"
						           Text="{Binding question,
						                          FallbackValue=Question}"
						           TextLineBounds="TrimToBaseline"
						           TextWrapping="WrapWholeWords" />
					</StackPanel>
				</Grid>
				<TextBlock Margin="10, 0, 10, 40"
				           FontSize="18"
				           FontWeight="Light"
				           Foreground="{ThemeResource TextColorPrimaryDark}"
				           TextWrapping="WrapWholeWords"
				           misc:TextFormatter.Text="{Binding answer}" />
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="Mail">
			<StackPanel Background="{ThemeResource PostBG}">
				<Grid Height="50" Background="{ThemeResource WindowBackgroundAccent}">
					<StackPanel Orientation="Horizontal">
						<Button MinWidth="0"
						        MinHeight="0"
						        Margin="-3"
						        HorizontalAlignment="Left"
						        VerticalAlignment="Top"
						        HorizontalContentAlignment="Stretch"
						        VerticalContentAlignment="Stretch"
						        BorderThickness="0"
						        Padding="0"
						        Style="{StaticResource ButtonStyleNoBG}"
						        UseLayoutRounding="True">
							<Image Width="50"
							       Height="50"
							       Source="{Binding asking_avatar}"
							       Stretch="UniformToFill" />
						</Button>
						<StackPanel Margin="5, 0">
							<TextBlock Margin="5, 5, 5, 0"
							           HorizontalAlignment="Left"
							           VerticalAlignment="Top"
							           FontSize="24"
							           Foreground="{ThemeResource TextColorPrimaryDark}"
							           Style="{StaticResource HeaderTextStyle}"
							           Tag="{Binding asking_name}"
							           Tapped="GoToBlog"
							           Text="{Binding asking_name}"
							           TextLineBounds="Tight"
							           TextTrimming="CharacterEllipsis" />
							<TextBlock Margin="5, -16, 5, 0"
							           HorizontalAlignment="Left"
							           VerticalAlignment="Top"
							           FontSize="14"
							           Foreground="{ThemeResource TextColorPrimaryDark}"
							           Text="said:"
							           TextTrimming="CharacterEllipsis" />
						</StackPanel>
					</StackPanel>
				</Grid>
				<StackPanel MinHeight="150">
					<TextBlock Margin="10, 5, 10, 40"
					           FontSize="22"
					           FontWeight="Light"
					           Foreground="{StaticResource TextColorPrimaryDark}"
					           TextWrapping="Wrap"
					           misc:TextFormatter.Text="{Binding body}" />
				</StackPanel>
				<Grid Height="40" Background="{ThemeResource WindowBackgroundAccent}">
					<StackPanel HorizontalAlignment="Right"
					            Orientation="Horizontal"
					            Tag="{Binding reblog_key}">
						<local:ToggleControl x:Name="ReplyButton"
						                     Width="35"
						                     MinWidth="35"
						                     MinHeight="50"
						                     MaxWidth="35"
						                     MaxHeight="50"
						                     Margin="5, 0"
						                     HorizontalAlignment="Right"
						                     BorderThickness="0"
						                     Click="ReplyButton_Click"
						                     EnabledChecked="{ThemeResource ReplyAsset}"
						                     EnabledUnchecked="{ThemeResource ReplyAsset}"
						                     IsChecked="False"
						                     Tag="{Binding id}"
						                     Visibility="Collapsed" />

						<Button x:Name="DeleteButton"
						        MinWidth="50"
						        MinHeight="50"
						        MaxWidth="50"
						        MaxHeight="50"
						        Margin="-6, 0, 0, 0"
						        HorizontalAlignment="Right"
						        BorderBrush="White"
						        BorderThickness="0"
						        Click="DeleteButton_Click"
						        Style="{StaticResource ButtonStyleNoBG}"
						        Tag="{Binding}">
							<Button.Background>
								<ImageBrush ImageSource="{ThemeResource DeleteButtonAsset}" Stretch="UniformToFill" />
							</Button.Background>
						</Button>
					</StackPanel>
				</Grid>
			</StackPanel>
		</DataTemplate>

		<converters:PostTemplateSelector x:Key="PostTemplate"
		                                 AnswerTemplate="{StaticResource Answer}"
		                                 AudioTemplate="{StaticResource Audio}"
		                                 ChatTemplate="{StaticResource Chat}"
		                                 GifTemplate="{StaticResource Gif}"
		                                 LinkTemplate="{StaticResource Link}"
		                                 MailTemplate="{StaticResource Mail}"
		                                 PhotoSetTemplate="{StaticResource Photoset}"
		                                 PhotoTemplate="{StaticResource Photo}"
		                                 QuoteTemplate="{StaticResource Quote}"
		                                 TextTemplate="{StaticResource Text}"
		                                 VideoTemplate="{StaticResource Video}"
		                                 YoutubeTemplate="{StaticResource YoutubeVideo}" />

	</UserControl.Resources>

	<ScrollViewer x:Name="scrollViewer"
	              Margin="-2, 0"
	              HorizontalAlignment="Stretch"
	              VerticalAlignment="Top"
	              HorizontalContentAlignment="Stretch"
	              VerticalContentAlignment="Stretch"
	              Background="{ThemeResource WindowBackground}"
	              HorizontalScrollMode="Disabled"
	              SizeChanged="scrollViewer_SizeChanged"
	              ViewChanged="scrollViewer_ViewChanged"
	              ZoomMode="Disabled">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<TextBlock x:Name="textBlock1"
			           Height="50"
			           VerticalAlignment="Center"
			           FontSize="22"
			           Foreground="{ThemeResource TextColorPrimaryDark}"
			           Padding="0, 20"
			           Style="{StaticResource HeaderTextStyle}"
			           Text="Pull to refresh.."
			           TextLineBounds="Tight" />
			<ListView x:Name="Posts"
			          Grid.Row="1"
			          Margin="0"
			          HorizontalAlignment="Stretch"
			          HorizontalContentAlignment="Stretch"
			          DataFetchSize="5"
			          IncrementalLoadingThreshold="5"
			          IncrementalLoadingTrigger="Edge"
			          ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
			          ItemsSource="{Binding}"
			          Padding="0, 4"
			          ScrollViewer.HorizontalScrollMode="Disabled"
			          ScrollViewer.VerticalScrollBarVisibility="Auto"
			          SelectionMode="None">
				<ListView.ItemsPanel>
					<ItemsPanelTemplate>
						<ItemsStackPanel />
					</ItemsPanelTemplate>
				</ListView.ItemsPanel>
				<ListView.ItemTemplate>
					<DataTemplate>
						<StackPanel Margin="6, 3">
							<Grid Height="50" Background="{ThemeResource WindowBackgroundAccent}">
								<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
									<Image Width="50"
									       Height="50"
									       Source="{Binding Avatar,
									                        FallbackValue={StaticResource DefaultAvatar}}"
									       Stretch="UniformToFill"
									       Tag="{Binding Name}"
									       Tapped="GoToBlog" />

									<StackPanel Margin="5, 0">
										<TextBlock Margin="5,5,50,0"
										           HorizontalAlignment="Left"
										           VerticalAlignment="Top"
										           FontSize="24"
										           Foreground="{ThemeResource TextColorPrimaryDark}"
										           Style="{StaticResource HeaderTextStyle}"
										           Tag="{Binding Name}"
										           Tapped="GoToBlog"
										           Text="{Binding Name}"
										           TextLineBounds="Tight"
										           TextTrimming="CharacterEllipsis" />
										<TextBlock Margin="5, 0"
										           HorizontalAlignment="Left"
										           VerticalAlignment="Top"
										           FontSize="14"
										           Foreground="{ThemeResource TextColorPrimaryDark}"
										           TextTrimming="CharacterEllipsis">
											<Run Text="{Binding date, Converter={StaticResource ToRelativeTime}}" />
											<Run Text="{Binding RebloggedFrom}" />
										</TextBlock>
									</StackPanel>
								</StackPanel>
								<Image x:Name="OtherOptionsButton"
								       Width="35"
								       Height="35"
								       Margin="10, 0"
								       HorizontalAlignment="Right"
								       Source="{ThemeResource MoreButtonAsset}"
								       Stretch="UniformToFill"
								       Tapped="OtherOptionsButton_Tapped">
									<FlyoutBase.AttachedFlyout>
										<Flyout x:Name="OptionsPopup" Placement="Full">
											<Flyout.FlyoutPresenterStyle>
												<Style TargetType="FlyoutPresenter">
													<Setter Property="Margin" Value="0" />
													<Setter Property="Background" Value="Transparent" />
												</Style>
											</Flyout.FlyoutPresenterStyle>
											<Grid>
												<Grid.RowDefinitions>
													<RowDefinition Height="*" />
													<RowDefinition Height="Auto" />
												</Grid.RowDefinitions>
												<Grid Background="#02000000" Tapped="Grid_Tapped" />
												<StackPanel Grid.Row="1"
												            VerticalAlignment="Bottom"
												            Background="{ThemeResource ColorPrimary}">
													<TextBlock Margin="20, 25, 20, 16"
													           VerticalAlignment="Top"
													           FontSize="24"
													           Foreground="{ThemeResource TextColorPrimary}"
													           Style="{StaticResource HeaderTextStyle}"
													           Tag="{Binding id}"
													           Tapped="OtherOptions_Tapped"
													           Text="post details"
													           TextLineBounds="Tight"
													           TextTrimming="CharacterEllipsis" />
													<TextBlock Margin="20, 8, 20, 16"
													           VerticalAlignment="Top"
													           FontSize="24"
													           Foreground="{ThemeResource TextColorPrimary}"
													           Style="{StaticResource HeaderTextStyle}"
													           Tag="{Binding post_url}"
													           Tapped="OtherOptions_Tapped"
													           Text="share"
													           TextLineBounds="Tight"
													           TextTrimming="CharacterEllipsis" />
													<TextBlock Margin="20, 8, 20, 25"
													           HorizontalAlignment="Left"
													           VerticalAlignment="Top"
													           FontSize="24"
													           Foreground="{ThemeResource TextColorPrimary}"
													           Style="{StaticResource HeaderTextStyle}"
													           Tag="{Binding post_url}"
													           Tapped="OtherOptions_Tapped"
													           Text="open in browser"
													           TextLineBounds="Tight"
													           TextTrimming="CharacterEllipsis" />
												</StackPanel>
											</Grid>
										</Flyout>
									</FlyoutBase.AttachedFlyout>
								</Image>
							</Grid>
							<ContentControl HorizontalContentAlignment="Stretch"
							                Content="{Binding}"
							                ContentTemplateSelector="{StaticResource PostTemplate}" />
							<StackPanel>
								<StackPanel Background="{ThemeResource PostBG}" Tag="{Binding}">
									<TextBlock MaxHeight="300"
									           Margin="5"
									           VerticalAlignment="Top"
									           FontSize="16"
									           Foreground="{ThemeResource TextColorPrimaryDark}"
									           IsTextSelectionEnabled="False"
									           Tapped="Caption_Tapped"
									           TextTrimming="CharacterEllipsis"
									           TextWrapping="Wrap"
									           Visibility="{Binding caption,
									                                Converter={StaticResource CaptionConverter}}"
									           misc:CaptionFormatter.Text="{Binding caption}" />
									<TextBlock Margin="5"
									           VerticalAlignment="Top"
									           FontSize="16"
									           Foreground="{ThemeResource TextColorPrimaryDark}"
									           TextWrapping="Wrap"
									           Visibility="{Binding tags_as_str,
									                                Converter={StaticResource TagsEnabled}}"
									           misc:TagLinks.Text="{Binding tags_as_str}" />

									<Grid Height="40"
									      Background="{ThemeResource WindowBackgroundAccent}"
									      Loaded="CommandPanel_Loaded"
									      Tag="{Binding special_case}">
										<StackPanel HorizontalAlignment="Left"
										            Orientation="Horizontal"
										            Tag="{Binding id}"
										            Tapped="GoToPostDetails">
											<TextBlock x:Name="NoteInfo"
											           Margin="10, 0, 0, 0"
											           HorizontalAlignment="Left"
											           VerticalAlignment="Center"
											           FontSize="22"
											           FontWeight="Light"
											           Foreground="{ThemeResource TextColorPrimaryDark}"
											           Text="{Binding note_count}"
											           TextWrapping="WrapWholeWords" />
											<TextBlock HorizontalAlignment="Left"
											           VerticalAlignment="Center"
											           FontSize="22"
											           FontWeight="Light"
											           Foreground="{ThemeResource TextColorPrimaryDark}"
											           Text=" notes"
											           TextWrapping="WrapWholeWords" />
										</StackPanel>
										<StackPanel x:Name="NormalCommands"
										            HorizontalAlignment="Right"
										            Orientation="Horizontal"
										            Tag="{Binding reblog_key}">
											<local:ToggleControl x:Name="ReblogButton"
											                     Margin="5, 0"
											                     Click="ReblogButton_Click"
											                     EnabledChecked="{StaticResource RebloggedAsset}"
											                     EnabledUnchecked="{StaticResource ReblogAsset}"
											                     IsChecked="False"
											                     Tag="{Binding id}" />
											<local:ToggleControl x:Name="LikeButton"
											                     Margin="5, 0"
											                     Click="LikeButton_Click"
											                     IsChecked="{Binding liked,
											                                         FallbackValue=False}"
											                     Tag="{Binding id}" />
											<local:ToggleControl x:Name="DeleteButton"
											                     Margin="0, 0, 5, 0"
											                     Click="DeleteButton_Click"
											                     EnabledChecked="{StaticResource DeleteButtonAsset}"
											                     EnabledUnchecked="{StaticResource DeleteButtonAsset}"
											                     Tag="{Binding id}"
											                     Visibility="{Binding IsEditable}" />
										</StackPanel>
										<StackPanel x:Name="DraftCommands"
										            HorizontalAlignment="Right"
										            Orientation="Horizontal"
										            Tag="{Binding reblog_key}"
										            Visibility="Collapsed">
											<local:ToggleControl x:Name="PostButton"
											                     Margin="0, 0, 5, 0"
											                     Click="PostDraftButton_Click"
											                     EnabledChecked="{StaticResource PostButtonAsset}"
											                     EnabledUnchecked="{StaticResource PostButtonAsset}"
											                     Tag="{Binding}"
											                     Visibility="{Binding IsEditable}" />
											<local:ToggleControl x:Name="DeleteButton_"
											                     Margin="0, 0, 5, 0"
											                     Click="DeleteButton_Click"
											                     EnabledChecked="{StaticResource DeleteButtonAsset}"
											                     EnabledUnchecked="{StaticResource DeleteButtonAsset}"
											                     Tag="{Binding id}"
											                     Visibility="{Binding IsEditable}" />
										</StackPanel>
									</Grid>
								</StackPanel>
								<ContentPresenter VerticalAlignment="Bottom"
								                  ContentTemplate="{StaticResource NotesContainer}"
								                  Visibility="{Binding notes,
								                                       Converter={StaticResource NotesToVisibility},
								                                       FallbackValue=Collapsed}" />
							</StackPanel>
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</Grid>
	</ScrollViewer>
</UserControl>
